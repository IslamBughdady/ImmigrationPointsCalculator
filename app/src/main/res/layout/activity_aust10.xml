<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mansour.ig.pointscalculator.Aust10">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".09"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background" />

    <ProgressBar
        android:id="@+id/indicator10"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:background="#020c5b"
        android:max="140"
        android:progressBackgroundTint="#ff00" />

    <TextView
        android:id="@+id/score10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:alpha=".9"
        android:text="your points are:"
        android:textColor="#ff00"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deslan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:alpha=".9"
        android:text="Accredited in a community language"
        android:textColor="#020c5b"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:alpha=".8"
        android:text=" Do any of the following apply to you?"
        android:textColor="#ff00"
        android:textSize="15dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/yesorno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="250dp"
        android:background="#fd020c5b"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">
        >

        <RadioButton
            android:id="@+id/translator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ff00"
            android:onClick="pressed_3"
            android:text="I am accredited as a pra-professional interpreter or translator(level 2) by the National Accreditation Authority for Translators and Interpreter."
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ff00"
            android:onClick="pressed_3"
            android:text="None of the above"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />


    </RadioGroup>

    <Button
        android:id="@+id/next10"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="410dp"
        android:background="#020c5b"
        android:text="next"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/prev10"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="410dp"
        android:background="#020c5b"
        android:text="previous"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9339624373452507/3677173094">
    </com.google.android.gms.ads.AdView>
</android.widget.RelativeLayout>
